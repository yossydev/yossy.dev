{
  "name": "blog",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler dev",
    "deploy": "NODE_TLS_REJECT_UNAUTHORIZED=0 $npm_execpath run build && wrangler deploy",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "typecheck": "tsgo -p . --noEmit",
    "typecheck:perfomance": "tsgo --generateTrace . --incremental false --noEmit",
    "create:post": "node ./app/libs/posts/generate-post.mjs",
    "update-rss": "node ./app/libs/posts/rss-parser.mjs"
  },
  "dependencies": {
    "@mdx-js/rollup": "^3.1.1",
    "@xterm/xterm": "^5.5.0",
    "highlight.js": "^11.11.1",
    "hono": "^4.10.4",
    "honox": "^0.1.52",
    "rehype-highlight": "^7.0.2",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@hono/vite-build": "^1.7.0",
    "@hono/vite-ssg": "^0.3.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@typescript/native-preview": "^7.0.0-dev.20251104.1",
    "hast": "^1.0.0",
    "postcss": "^8.5.6",
    "rehype": "^13.0.2",
    "remark": "^15.0.1",
    "tailwindcss": "^4.1.18",
    "unist-util-visit": "^5.0.0",
    "vite": "^7.1.12",
    "wrangler": "^4.16.1"
  }
}
