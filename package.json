{
  "name": "blog",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler dev",
    "deploy": "NODE_TLS_REJECT_UNAUTHORIZED=0 $npm_execpath run build && wrangler deploy",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "typecheck": "tsgo -p . --noEmit",
    "typecheck:perfomance": "tsgo --generateTrace . --incremental false --noEmit",
    "create:post": "node ./app/libs/posts/generate-post.mjs",
    "update-rss": "node ./app/libs/posts/rss-parser.mjs"
  },
  "dependencies": {
    "@mdx-js/rollup": "^3.0.1",
    "@xterm/xterm": "^5.5.0",
    "highlight.js": "^11.9.0",
    "hono": "^4.5.1",
    "honox": "^0.1.23",
    "rehype-highlight": "^7.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.0.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20240222.0",
    "@hono/vite-build": "^1.6.1",
    "@hono/vite-ssg": "^0.1.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@typescript/native-preview": "^7.0.0-dev.20250522.2",
    "hast": "^1.0.0",
    "postcss": "^8.4.35",
    "rehype": "^13.0.1",
    "remark": "^15.0.1",
    "tailwindcss": "^4.1.8",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.16.0"
  }
}
